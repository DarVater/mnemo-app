

<MainBtn@Button>:
    font_size: '30sp'
    color: (0, 0, 0, 1)
    background_normal: 'src/btn_main.png'
    background_down: 'src/btn_main_pressed.png'

<MainLabel@Label>:
    font_size: '28sp'
    color: (0.1, 0.1, 0.1, 1)

<SubLabel@Label>:
    font_size: '32sp'
    color: (0, 0,0, 1)

<MainInput@TextInput>:
    font_size: '30sp'
    multiline: False
    background_normal: 'src/input.png'
    height: '76sp'

<ViewSingUp>:
    btn: btn
    help_text: help_text
    header: header
    input: input
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'src/background_main.png'
    BoxLayout:
        pos_hint: {'center_x': .5, 'center_y': .5}
        size_hint: 0.7, 0.5
        orientation: 'vertical'
        padding: 20
        SubLabel:
            id: header
        MainInput:
            size_hint: self.size_hint[0], 0.85
            id: input
        MainLabel:
            size_hint: 1, 0.7
            id: help_text
        Label:
            size_hint: 1, 1.5
        MainBtn:
            size_hint: self.size_hint[0], 0.85
            id: btn
            on_press:
                root.next()

<ViewManager>:
    id: view_manager

