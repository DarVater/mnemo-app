

<MainBtn@Button>:
    font_size: '30sp'
    color: (0, 0, 0, 1)
    background_normal: 'src/btn_main.png'
    background_down: 'src/btn_main_pressed.png'

<MainLabel@Label>:
    font_size: '28sp'
    color: (0.1, 0.1, 0.1, 1)

<SubLabel@Label>:
    font_size: '32sp'
    color: (0, 0,0, 1)

<MainInput@TextInput>:
    font_size: '30sp'
    opacity : 100
    multiline: False
    background_normal: 'src/input.png'
    height: '76sp'

<ViewSingUp>:
    btn: btn
    help_text: help_text
    header: header
    input: input
    view_interface: view_interface
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'src/background_main.png'
    BoxLayout:
        spacing: 15
        id: view_interface
        pos_hint: {'center_x': .5, 'center_y': .5}
        size_hint: 0.7, 0.5
        orientation: 'vertical'
        padding: 20
        SubLabel:
            id: header
        MainInput:
            size_hint: self.size_hint[0], 0.85
            id: input
        MainLabel:
            size_hint: 1, 0.7
            id: help_text
        Label:
            size_hint: 1, 1.5
        MainBtn:
            size_hint: self.size_hint[0], 0.85
            id: btn
            on_press:
                root.next()

<ViewManager>:
    view_interface: view_interface
    navigation: navigation
    id: view_manager
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'src/background_main.png'
    BoxLayout:
        id: view_interface
        orientation: 'vertical'
        padding: 10
        BoxLayout:
            size_hint_y: 0.15
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: 'src/main_goal.png'
            MainLabel:
                text: 'Слова уровня А1'
        BoxLayout:
            id: progress
            spacing: 10
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                BoxLayout:
                    size_hint_y: 0.17
                    canvas.before:
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            source: 'src/hair_root.png'
                    MainLabel:
                        text: 'Прошол'
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                BoxLayout:
                    size_hint_y: 0.17
                    canvas.before:
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            source: 'src/repeat_root.png'
                    MainLabel:
                        text: 'Повторил'
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                BoxLayout:
                    size_hint_y: 0.17
                    canvas.before:
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            source: 'src/know_root.png'
                    MainLabel:
                        text: 'Запомнил'
        BoxLayout:
            size_hint:  0.75, 1.1
            id: navigation
            spacing: 30
            padding: 50, 40
            pos_hint: {'center_x': .5, 'center_y': .5}
            orientation: 'vertical'
            MainBtn:
                text: 'Темы'
                id: topics
                on_press:
                    root.topics()
            MainBtn:
                text: 'Как это работает'
                id: how_it_works
                on_press:
                    root.how_it_works()
            MainBtn:
                text: 'Выбор языка'
                id: choose_language
                on_press:
                    root.choose_language()
            MainBtn:
                text: 'Выход'
                id: out
                on_press:
                    root.out()

